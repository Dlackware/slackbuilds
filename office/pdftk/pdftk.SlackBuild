PRGNAM=pdftk
VERSION=1.44
ARCH=${ARCH:-i486}
BUILD=${BUILD:-1}
TAG=${TAG:-_SBo}

CWD=$(pwd)
TMP=${TMP:-/tmp/SBo}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

case "$ARCH" in
  i486)      SLKCFLAGS="-O2 -march=i486 -mtune=i686"
             ;;
  i686)      SLKCFLAGS="-O2 -march=i686 -mtune=i686"
             ;;
  s390)      SLKCFLAGS="-O2"
             ;;
  powerpc)   SLKCFLAGS="-O2"
             ;;
  x86_64)    SLKCFLAGS="-O2 -fPIC"
             SLKLDFLAGS="-L/usr/lib64"; LIBDIRSUFFIX="64"
             ;;
  athlon-xp) SLKCFLAGS="-march=athlon-xp -O3 -pipe -fomit-frame-pointer"
             ;;
esac

set -e

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT
cd $TMP
rm -rf $PRGNAM-$VERSION-dist
unzip $CWD/$PRGNAM-$VERSION-src.zip
cd $PRGNAM-$VERSION-dist
chown -R root:root .
chmod -R a-s,u+w,go+r-w .

cd $PRGNAM
  cp $CWD/Makefile.Slackware-current .
  make OPT="$SLKCFLAGS" -f Makefile.Slackware-current
  mkdir -p $PKG/usr/{bin,man/man1,doc/$PRGNAM-$VERSION}
  cp -a pdftk $PKG/usr/bin
  strip --strip-unneeded $PKG/usr/bin/pdftk 2> /dev/null
cd ..

gzip -9c pdftk.1 > $PKG/usr/man/man1/pdftk.1.gz
cat pdftk.1.txt > $PKG/usr/doc/$PRGNAM-$VERSION/pdftk.1.txt
cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.${PKGTYPE:-tgz}
